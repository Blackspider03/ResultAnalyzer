<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450sp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cancel_text"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="#FF5722"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="About Us:"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="Welcome to Result Analyzer, your go-to companion for effortlessly managing and analyzing academic results on the go."
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="At Result Analyzer, we understand the importance of simplifying the process of result management for educators, administrators, and students alike. Whether you're a teacher seeking to efficiently organize and analyze student performance data, an administrator striving to streamline result processing workflows, or a student aiming to track your academic progress, Result Analyzer is here to empower you."
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="Our mission is to revolutionize the way educational results are managed, offering a comprehensive and user-friendly solution that saves time, enhances productivity, and provides invaluable insights."
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="Group Members:-"
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="1.Varun Satish Bhagwat"
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="2. Ayush Kailas Malvatkar"
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="3.Milind  Rakesh Garge"
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:text="4.Manish Mahendra Sonavne"
                    android:textColor="#FF9800"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>